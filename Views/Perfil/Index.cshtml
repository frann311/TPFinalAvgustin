@model TPFinalAvgustin.Models.Usuario

@{
    ViewData["Title"] = "Mi Perfil";
}


@if (ViewBag.IsOwnProfile)
{
    <div class="alert alert-info">
        <strong>¡Bienvenido!</strong> Aquí puedes ver y editar tu perfil.
    </div>
}
else
{
    <div class="alert alert-info">
        <strong>Perfil de @Model.Nombre @Model.Apellido</strong>
    </div>
}

<div class="card shadow-sm p-4">
    <div class="row">
        <div class="col-md-3 text-center">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" class="rounded-circle mb-3"
                    style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar" />
            }
            else
            {
                <div class="bg-secondary text-white rounded-circle d-flex justify-content-center align-items-center"
                    style="width: 150px; height: 150px;">
                    <i class="fas fa-user fa-3x"></i>
                </div>
            }
        </div>
        <div class="col-md-9">
            <table class="table table-borderless">
                <tr>
                    <th>Nombre</th>
                    <td>@Model.Nombre</td>
                </tr>
                <tr>
                    <th>Apellido</th>
                    <td>@Model.Apellido</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>@Model.Email</td>
                </tr>

                @if (User.IsInRole("Administrador"))
                {
                    <tr>
                        <th>Rol</th>
                        <td>@Model.Rol</td>
                    </tr>
                }

                <tr>
                    <th>Descripcion</th>
                    <td>@Model.Perfil</td>
                </tr>
            </table>
            @if (ViewBag.IsOwnProfile)
            {
                <a asp-action="EditProfile" class="btn btn-primary">Editar Perfil</a>
                <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                    <button type="submit" class="btn btn-link">Salir</button>
                </form>
            }

        </div>
    </div>
</div>
